@model CountriesViewModel
@{
    ViewData["Title"] = "Military Info";
}
<h1>@ViewData["Title"]</h1>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                Tag
            </th>
            <th>
                Played By
            </th>
            <th>
                Total Cohorts
            </th>
            <th>
                Monthly Manpower
            </th>
            <th>
                Manpower
            </th>
            <th>
                Max Manpower
            </th>
            <th>
                Total Mil Exp
            </th>
            <th>
                Last battle won
            </th>
            <th>
                Last war
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Countries)
    {
        <tr>
            <td>
                @item.Tag
            </td>
            <td>
                @item.PlayedBy
            </td>
            <td>
                @item.TotalCohorts.ToString("N0")
            </td>
            <td>
                @item.MonthlyManpower.ToString("N2")
            </td>
            <td>
                @item.Manpower.ToString("N1")
            </td>
            <td>
                @item.MaxManpower.ToString("N1")
            </td>
            <td>
                @item.TotalMilitaryExperience.ToString("N0")
            </td>
            <td>
                @item.LastBattleWon.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.LastWar.ToString("dd/MM/yyyy")
            </td>
        </tr>
    }
    </tbody>
</table>
